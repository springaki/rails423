<% breadcrumb :idea, @idea %>
<%= breadcrumbs pretext: "BreadCrumbs: ",
                separator: " &rsaquo; "
%>


<% breadcrumb :idea, @idea %>
<% breadcrumbs pretext: "You are here: ", link_current: true do |links| %>
  <% if links.any? %>
    <% links.each do |link| %>
      <%= link_to link.text, link.url, class: (link.current? ? "current" : nil) %> <%= link.current? ? "" : ' > ' %>
    <% end %>
  <% end %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @idea.picture %>
</p>

<p>
  <strong>Publish at:</strong>
  <%= @idea.publish_at %>
</p>


<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
